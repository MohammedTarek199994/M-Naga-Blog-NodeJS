<%- include("partials/header") -%>
<h1>Home Page</h1>
<hr />
<p>
  Welcome to Mohammed Tarek Blog
</p>
<br />
<hr />
<h1 style="font-size: 40px">Posts</h1>
<hr />

<!-- ------------------------------------------------------------ -->
<% posts.forEach(function(post, index) { %>
  <form action="/delete" method="post">
<div class="post-container">
  <div class="wrapper">
  
    <section class="post">
      <header>   <%= post.title %></header>
      <p><%= post.content.substring(0,200) + "..." %>
        
    
        <a href="/posts/<%= post.title %>" class="badge"> Read More </a></p>
      <div class="row">
        <div class="col-md-12 text-center">
          <button
            type="submit"
            value="<%=post._id %>"
            class="btn btn-danger mt-3"
            name="postId">
            Delete Post
          </button>
        </div>
      </div>
    </form>
    </section>
  </div>
</div>
<% }); %>

