<%- include("partials/header") -%>
<br />
<hr />
<h1 style="font-size: 40px">Posts</h1>
<hr />

<!-- ------------------------------------------------------------ -->
<% posts.forEach(function(post, index) { %>
  <form action="/delete" method="post">
<div class="post-container">
  <div class="wrapper">
  
    <section class="post">
      <header>   <%= post.title %></header>
      <p><%= post.content.substring(0,200) + "..." %>
       
        <a href="/posts/<%= post.title %>" class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Read More</a>
      <div class="row">
        <div class="col-md-12 text-center">
          <button
            class="btn btn-danger"
            type="submit"
            value="<%=post._id %>"
            class="btn btn-danger mt-3"
            name="postId">
            Delete
          </button>
        </div>
      </div>
    </form>
    
    </section>
  </div>
</div>
<% }); %>


<%- include("partials/footer") -%>
